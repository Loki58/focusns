<?xml version="1.0" encoding="UTF-8"?>
<pages>
    <page path="/index" extends="site">
        <position name="mainColumn">
            <widget target="/site/content-view">
                <preference>
                    <title>Hello</title>
                    <content><![CDATA[
                        <div class="hero-unit">
                            <h1>FocusSNS</h1>
                            <p>FocusSNS 是一款开源的主题社会化网络软件(SNS)，可以用于构建各类主题社区、企业社区、协作平台等。</p>
                            <p>
                                <a class="btn btn-primary btn-large" href="https://github.com/gavin-hu/focusns" target="blank">了解更多</a>
                            </p>
                        </div>
                    ]]></content>
                </preference>
            </widget>
        </position>
    </page>
    <page path="/login" extends="site">
        <position name="headerBar">
            <widget target="/site/menu-main" />
            <widget target="/site/menu-user" />
        </position>
        <position name="mainColumn">
            <widget target="/site/login-form">
                <navigation>
                    <event on="auth-failure">/login</event>
                    <event on="login-success">/profile;p=#{projectUser.project.code}</event>
                </navigation>
            </widget>
        </position>
    </page>
    <page path="/register">
        <position name="headerBar">
            <widget target="/site/menu-main" />
            <!--<widget target="/site/login-bar">
                <navigation>
                    <event on="login-success">/profile;p=#{projectUser.project.code}</event>
                </navigation>
            </widget>-->
            <widget target="/site/menu-user" />
        </position>
        <position name="mainColumn">
            <widget target="/site/register-form" />
        </position>
        <position name="copyright">
            <widget target="/site/copyright" />
        </position>
    </page>

    <page path="/people" extends="site">

    </page>
</pages>